@model IEnumerable<BackEndCapstone.Models.AppointmentService>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.AppointmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AppointmentServiceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AppointmentServiceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AppointmentServiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
