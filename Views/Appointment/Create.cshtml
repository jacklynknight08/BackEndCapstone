@model BackEndCapstone.Models.ViewModels.AppointmentCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Appointment</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Appointment.StylistId" class="col-md-2 control-label">Stylist</label>
            <div class="col-md-10">
                @Html.DropDownList(
                    "Appointment.StylistId",
                    @Model.Stylists,
                    new
                    {
                        @class = "form-control"
                    }
                )
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Appointment.ClientId" class="col-md-2 control-label">Client</label>
            <div class="col-md-10"></div>
            @Html.DropDownList(
                    "Appointment.ClientId",
                    @Model.Clients,
                    new
                    {
                        @class = "form-control"
                    }
                )
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Appointment.ServiceId" class="col-md-2 control-label">Service</label>
            <div class="col-md-10"></div>
            @Html.DropDownList(
                    "Appointment.ServiceId",
                    @Model.Services,
                    new
                    {
                        @class = "form-control"
                    }
                )
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Appointment.StartTime" class="col-md-2 control-label">Start Time</label>
            <div class="col-md-10">
                <input asp-for="Appointment.StartTime" class="form-control" />
                <span asp-validation-for="Appointment.StartTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Appointment.AppointmentDate" class="col-md-2 control-label">Date</label>
            <div class="col-md-10">
                <input asp-for="Appointment.AppointmentDate" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default reg-btn" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-default reg-btn">Back to List</a>
</div>

