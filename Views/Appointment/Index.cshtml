@model IEnumerable<BackEndCapstone.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h2><em>Schedule An Appointment</em></h2>
    
    <p>
        <a asp-action="Create" class="btn btn-default reg-btn">Create Appointment</a>
    </p>

<table class="table table-hover">
    <thead>
        <tr>
                <th>
                    Date
                </th>
                <th>
                    Time
                </th>
                <th>
                    Name
                </th>
                <th>
                    Stylist
                </th>
                <th>
                    Service
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stylist.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            
            <td>
                <!-- <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="text-success">Edit</a> | -->
                <a asp-action="Details" asp-route-id="@item.AppointmentId" class="text-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="text-success">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
