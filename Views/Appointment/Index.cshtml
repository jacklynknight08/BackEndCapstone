@model IEnumerable<BackEndCapstone.Models.ScheduledAppointment>

@{
    ViewData["Title"] = "Index";
}

<h2>Schedule An Appointment</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Date
                </th>
                <th>
                    Time
                </th>
                <th>
                    Name
                </th>
                <th>
                    Stylist
                </th>
                <th>
                    Service
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StylistName)
            </td>
            
            @foreach(var s in item.ScheduledServices)
            {
            <td>
                @Html.DisplayFor(modelItem => s.Service.Name)
            </td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Appointment.AppointmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Appointment.AppointmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Appointment.AppointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
