@model IndexViewModel

@{
    ViewData["Title"] = "View";
}

<h2>Edit Profile</h2>

<form asp-action="EditProfile">
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="AppUser.Id" />
        <input type="hidden" asp-for="AppUser.PasswordHash" />
        <div class="form-group">
            <label asp-for="AppUser.FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AppUser.FirstName" class="form-control" />
                <span asp-validation-for="AppUser.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AppUser.LastName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="AppUser.LastName" class="form-control" />
                <span asp-validation-for="AppUser.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AppUser.PhoneNumber" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="AppUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="AppUser.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" asp-for="AppUser.Email" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Profile</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}